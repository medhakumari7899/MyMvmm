<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f0ebef"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:id="@+id/backarrow"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:text="Future Company Details"/>
        </RelativeLayout>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/rl"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_5sdp"
            android:id="@+id/nameIDTextInputEditText"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint=" Name"
            android:layout_height="52dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/nameIDTextInputEditText"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_5sdp"
            android:id="@+id/countryIDTextInputEditText"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Country"
            android:layout_height="52dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/countryIDTextInputEditText"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_5sdp"
            android:id="@+id/streetaddressIDTextInputEditText"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Street Address"
            android:layout_height="52dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/streetaddressIDTextInputEditText"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_5sdp"
            android:id="@+id/mainbusinessactivityIDTextInputEditText"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Main Business Activities"
            android:layout_height="52dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/mainbusinessactivityIDTextInputEditText"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_5sdp"
            android:id="@+id/shareholdersIDTextInputEditText"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Share Holders"
            android:layout_height="52dp"/>


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/shareholdersIDTextInputEditText"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_5sdp"
            android:id="@+id/percentagesIDTextInputEditText"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Percentages"
            android:layout_height="52dp"/>


        <Button
            android:layout_width="360dp"
            android:background="@drawable/backgroun_set"
            android:id="@+id/register"
            android:layout_below="@+id/percentagesIDTextInputEditText"
            android:text="Register Now"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:textColor="#FFF"
            android:layout_marginTop="@dimen/_25sdp"
            android:padding="@dimen/_5sdp"
            android:layout_height="52dp"/>





    </RelativeLayout>




</ScrollView>



