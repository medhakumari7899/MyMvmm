<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f0ebef"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoginStart">

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_centerHorizontal="true"
        android:id="@+id/img"
        android:layout_marginTop="@dimen/_60sdp"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_height="@dimen/_100sdp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/img"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:id="@+id/EmailIDTextInputEditText"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Email"
            android:layout_height="52dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="360dp"
        android:layout_below="@+id/EmailIDTextInputEditText"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/rectangle_2"
        android:padding="@dimen/_10sdp"
        android:id="@+id/passwordIDTextInputEditText"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:textColor="#7C6A6A"
        android:textColorHint="#7C6A6A"
        android:hint="Password"
        android:layout_height="52dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear"
        android:layout_below="@+id/passwordIDTextInputEditText"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:text="Forgot Password?"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:textColor="#039de7"
        android:id="@+id/forgotpassword"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        android:layout_gravity="right"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="52dp"
            android:elevation="@dimen/_2sdp"
           android:layout_marginLeft="@dimen/_20sdp"
           android:layout_marginRight="@dimen/_20sdp"
           android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@id/passwordIDTextInputEditText"
            android:id="@+id/cv">
            <TextView
                android:layout_width="wrap_content"
                android:text="Log in"
                android:layout_gravity="center"
                android:id="@+id/tvLogin"
                android:textStyle="bold"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_15sdp"
                android:textColor="#2E1D1D"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="360dp"
        android:orientation="horizontal"
        android:layout_below="@+id/cv"
        android:id="@+id/rl"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_height="52dp">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:src="@drawable/facebook"
            android:id="@+id/facebook"
            android:layout_height="@dimen/_30sdp"/>
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:src="@drawable/google"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_toRightOf="@+id/facebook"
            android:layout_height="@dimen/_30sdp"/>

    </RelativeLayout>


 <RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/linear1"
     android:layout_marginTop="@dimen/_10sdp"
    android:layout_below="@+id/rl"
     android:gravity="center"
    android:orientation="vertical"
    android:layout_height="wrap_content">

     <TextView
         android:layout_width="wrap_content"
         android:text="Don't have an account?"
         android:textSize="@dimen/_12sdp"
         android:textStyle="bold"
         android:textColor="#2E1D1D"
         android:id="@+id/arhacc"
         android:padding="@dimen/_5sdp"
         android:layout_gravity="right"
         android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Sign up"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/arhacc"
        android:textColor="#039de7"
        android:id="@+id/signup"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content"/>
</RelativeLayout>

</RelativeLayout>